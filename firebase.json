{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api",
        "function": "api"
      },
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/flows",
        "function": "api"
      },
      {
        "source": "**/*.js",
        "destination": "/$1.js"
      },
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/not_used",
        "function": "dynamicIndex"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "echo \"$RESOURCE_DIR\" is the resource directory",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 9001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
