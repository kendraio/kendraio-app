{
  "title": "Settings",
  "blocks": [
    {
      "type": "multi",
      "batches": [
        {
          "blocks": [
            {
              "type": "init"
            },
            {
              "type": "variable-get",
              "name": "settings"
            },
            {
              "type": "form",
              "hasSubmit": false,
              "emitOnInit": true,
              "debounceTime": 100,
              "jsonSchema": {
                "type": "object",
                "properties": {
                  "adapterRepoUrl": {
                    "title": "Adapter repository base URL",
                    "description": "Enter the location of the adapter repository, including the final trailing slash",
                    "type": "string",
                    "default": "https://kendraio.github.io/kendraio-adapter/"
                  },
                  "showHelp": {
                    "title": "Show help?",
                    "type": "boolean",
                    "default": true
                  },
                  "debugMode": {
                    "title": "Debug mode",
                    "type": "boolean",
                    "default": false
                  }
                }
              },
              "uiSchema": {}
            },
            {
              "type": "actions",
              "buttons": [
                {
                  "label": "Save settings",
                  "color": "primary",
                  "blocks": [
                    {
                      "type": "variable-set",
                      "name": "settings"
                    }
                  ]
                },
                {
                  "label": "Reset app",
                  "color": "warn",
                  "blocks": [
                    {
                      "type": "dialog",
                      "blocks": [
                        {
                          "type": "message",
                          "title": "Are you sure you want to reset the app?",
                          "message": "This action will remove all data and settings."
                        },
                        {
                          "type": "actions",
                          "buttons": [
                            {
                              "label": "OK",
                              "color": "primary",
                              "blocks": [
                                {
                                  "type": "dispatch",
                                  "action": "resetApp"
                                }
                              ]
                            },
                            {
                              "label": "Cancel",
                              "blocks": [
                                {
                                  "type": "init"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
