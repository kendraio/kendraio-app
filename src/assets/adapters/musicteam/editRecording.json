{
  "title": "MusicTeam edit recording",
  "blocks": [
    {
      "type": "init"
    },
    {
      "type": "db",
      "operation": "fetch",
      "uuidGetter": "context.queryParams.uuid"
    },
    {
      "type": "mapping",
      "mapping": "data[0]"
    },
    {
      "type": "form",
      "hasSubmit": false,
      "emitOnInit": true,
      "jsonSchema": {
        "type": "object",
        "properties": {
          "uuid": {
            "title": "uuid",
            "type": "string"
          },
          "title": {
            "title": "Title",
            "type": "string"
          },
          "isrc": {
            "title": "ISRC",
            "type": "string"
          },
          "owners": {
            "title": "Owners",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "uuid": {
                  "title": "Owner",
                  "type": "string"
                },
                "split": {
                  "title": "Split",
                  "type": "integer"
                }
              }
            }
          },
          "related_works": {
            "title": "Related works",
            "type": "array",
            "items": {
              "title": "Related work",
              "type": "string"
            }
          }
        }
      },
      "uiSchema": {
        "uuid": {
          "ui:disabled": true
        },
        "owners": {
          "ui:widget": "table",
          "colHeadings": ["Owner", "Split"],
          "blocks": [
            {
              "type": "actions",
              "buttons": [
                {
                  "label": "Edit",
                  "blocks": [
                    {
                      "type": "launch",
                      "adapter": "musicteam",
                      "workflowId": "editContributor",
                      "context": {
                        "uuid": "data.uuid"
                      }
                    }
                  ]
                }
              ]
            }
          ],
          "items": {
            "uuid": {
              "ui:widget": "blocks",
              "blocksConfig": {
                "blocks": [
                  {
                    "type": "init"
                  },
                  {
                    "type": "db",
                    "operation": "get",
                    "adapterName": "MusicTeam",
                    "schema": "contributors"
                  },
                  {
                    "type": "reference",
                    "fieldLabel": "Contributor",
                    "labelField": "name",
                    "valueField": "uuid"
                  }
                ]
              }
            }
          }
        },
        "related_works": {
          "ui:widget": "table",
          "colHeadings": ["Related work"],
          "blocks": [
            {
              "type": "actions",
              "buttons": [
                {
                  "label": "Edit",
                  "blocks": [
                    {
                      "type": "launch",
                      "adapter": "musicteam",
                      "workflowId": "editWork",
                      "context": {
                        "uuid": "data"
                      }
                    }
                  ]
                }
              ]
            }
          ],
          "items": {
            "ui:widget": "blocks",
            "blocksConfig": {
              "blocks": [
                {
                  "type": "init"
                },
                {
                  "type": "db",
                  "operation": "get",
                  "adapterName": "MusicTeam",
                  "schema": "works"
                },
                {
                  "type": "reference",
                  "fieldLabel": "Work",
                  "labelField": "title",
                  "valueField": "uuid"
                }
              ]
            }
          }
        }
      }
    },
    {
      "type": "actions",
      "buttons": [
        {
          "label": "Save",
          "color": "primary",
          "blocks": [
            {
              "type": "db",
              "operation": "update",
              "uuidGetter": "uuid"
            }
          ]
        },
        {
          "label": "Cancel",
          "blocks": [
            {
              "type": "init"
            }
          ]
        }
      ]
    },
    {
      "type": "launch",
      "adapter": "musicteam",
      "workflowId": "recordings"
    }
  ],
  "id": "editRecording"
}
