{
  "title": "YouTube edAddit Video",
  "blocks": [
    {
      "type": "form",
      "hasSubmit": false,
      "emitOnInit": true,
      "jsonSchema": {
        "title": "Add Video",
        "description": "This form allows you to add a new video.",
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "title": "Title",
            "description": "",
            "type": "string",
            "minLength": 2,
            "maxLength": 150
          },
          "description": {
            "type": "string",
            "title": "Description",
            "minLength": 2,
            "maxLength": 1000
          },
          "tags": {
            "type": "string",
            "title": "Tags ",
            "description": "Press enter to add a tag"
          },
          "visibility": {
            "type": "object",
            "title": "Visibility "
          },
          "playlist": {
            "type": "object",
            "title": "Playlists"
          }
        }
      },
      "uiSchema": {
        "title": {
          "ui:disabled": false,
          "ui:placeholder": "Enter the Video Title",
          "ui:errMessage": {
            "required": "This is my Required Field error message.",
            "minLength": "This a custom Min length error message."
          }
        },
        "description": {
          "ui:disabled": false,
          "ui:placeholder": "Enter the Video Description",
          "ui:autofocus": true,
          "ui:widget": "k-textarea",
          "ui:rows": 8,
          "ui:cols": 3,
          "ui:errMessage": {
            "required": "Excuse me, this field is required!!",
            "minLength": "Please enter more Characters",
            "maxLength": "This field cannot except that many Characters. ",
            "pattern": "Incorrect format! Should be 555-555-555"
          }
        },
        "videoId": {},
        "thumbnails": {
          "ui:widget": "thumbnailviewer"
        },
        "tags": {
          "ui:widget": "tags"
        },
        "visibility": {
          "ui:widget": "visibility"
        },
        "playlist": {
          "ui:widget": "playlist"
        }
      }
    },
    {
      "type": "debug",
      "adapter": "YouTube",
      "workflowId": "addVideo"
    },
    {
      "type": "actions",
      "buttons": [
        {
          "label": "Add New Video",
          "color": "primary",
          "blocks": [
            {
              "type": "db",
              "operation": "add",
              "adapterName": "YouTube",
              "schema": "my-videolist"
            },
            {
              "type": "launch",
              "adapter": "youtube",
              "workflowId": "editVideo",
              "context": {
                "uuid": "uuid"
              }
            }
          ]
        },
        {
          "label": "Cancel",
          "blocks": [
            {
              "type": "init"
            }
          ]
        }
      ]
    }
  ],
  "id": "addVideo"
}
